@model SBiSchoolWeb.Entities.RoleModel

@{
    ViewBag.Title = "Edit Role";
    var rolename = Model.RoleName.ToUpper(); 
}

<h2 class="page-title">Edit Role - @rolename </h2>

@using (Html.BeginForm("EditRole", "Administrator", FormMethod.Post, new { enctype = "multipart/form-data", id = "edit-role-form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>RoleModel</legend>

        @Html.HiddenFor(model => model.RoleId)

        <div class="editor-label">
            @Html.LabelFor(model => model.RoleName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoleName, new { @autofocus = "autofocus" })
            @Html.ValidationMessageFor(model => model.RoleName)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}









@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () {

            $("#loading").hide();

            $("#progress").hide();

            $.ajaxSetup({ cache: false });

        });

        $("#btnSubmit").on("click", function (e) {

            $("#progress").removeClass('displaynone');
            $("#progress").addClass('displayblock');
            $("#progress").show();

            $("#edit-role-form").submit();
        });


        </script>
 
}









