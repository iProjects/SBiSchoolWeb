@model IEnumerable<SBiSchoolWeb.Entities.RoleModel>

@{
    ViewBag.Title = "Roles";
    int rolescount = Model.Count();
}

<h2 class="page-title">Roles [ @rolescount ] </h2>


<div>
    @using (Html.BeginForm("CreateRole", "Administrator", FormMethod.Get, new { enctype = "multipart/form-data", id = "admin-create-role-form" }))
    { 
        <p>
            <a id="btnSubmitCreateRoleForm" style="cursor: pointer;" title="Create Role">Create Role</a>
            @*@Html.ActionLink("Create Role", "CreateRole")*@
        </p> 
         
    }
</div>



<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditRole", new { id = item.RoleId }) |
            @Html.ActionLink("Details", "RoleDetails", new { id = item.RoleId }) | 
            @Html.ActionLink("Delete", "DeleteRole", new { id = item.RoleId, description = item.RoleName })
            </td>
        </tr>
    }

</table>









@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () {

            $("#loading").hide();

            $("#progress").hide();

            $.ajaxSetup({ cache: false });

        });

        $("#btnSubmitCreateRoleForm").on("click", function (e) {

            e.preventDefault();

            $("#progress").removeClass('displaynone');
            $("#progress").addClass('displayblock');
            $("#progress").show();

            $("#admin-create-role-form").submit();

        });

    </script>

}









