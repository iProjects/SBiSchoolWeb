@model IEnumerable<SBiSchoolWeb.Entities.Account>

@{
    ViewBag.Title = "Accounts";
}

<h2 class="page-title"> Accounts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr> 
        <th>
            @Html.DisplayNameFor(model => model.AccountName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountNo)
        </th>  
        <th>
            @Html.DisplayNameFor(model => model.BookBalance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClearedBalance)
        </th>    
        <th>
            @Html.DisplayNameFor(model => model.Closed)
        </th> 
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr> 
        <td>
            @Html.DisplayFor(modelItem => item.AccountName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountNo)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.BookBalance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClearedBalance)
        </td>  
        <td>
            @Html.DisplayFor(modelItem => item.Closed)
        </td> 
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>












@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () {

            $("#progress").hide();

            $.ajaxSetup({ cache: false });

        });
        </script>
 
}










