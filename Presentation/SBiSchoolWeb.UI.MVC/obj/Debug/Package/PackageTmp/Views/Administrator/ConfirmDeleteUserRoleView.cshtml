@model SBiSchoolWeb.UI.MVC.Models.ConfirmDeleteModel

@{
    ViewBag.Title = "Confirm Delete";  
}

<h2 class="page-title">Confirm Delete User Role </h2>

@using (Html.BeginForm("DeleteUserRole", "Administrator", FormMethod.Post, new { enctype = "multipart/form-data", id = "delete-user-role-form" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Confirm Delete</legend>

        @Html.HiddenFor(model => model.Id)

        @Html.HiddenFor(model => model.Id2)
         
        <p>
            <input type="submit" value="Delete"   id="btnSubmit" />
        </p>
    </fieldset>
}









@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () {
            
            $("#loading").hide();

            $("#progress").hide();

            $.ajaxSetup({ cache: false });

        });

        $("#btnSubmit").on("click", function (e) {

            $("#progress").removeClass('displaynone');
            $("#progress").addClass('displayblock');
            $("#progress").show();

            $("#delete-user-role-form").submit();
        });


        </script>
 
}









