@model SBiSchoolWeb.Entities.RoleModel

@{
    ViewBag.Title = "Create Role";
}

<h2 class="page-title">Create Role </h2>

@using (Html.BeginForm("CreateRole", "Administrator", FormMethod.Post, new { enctype = "multipart/form-data", id = "create-role-form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>RoleModel</legend>


        <div class="editor-label">
            @Html.LabelFor(model => model.RoleName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.RoleName, new { @autofocus = "autofocus" })
            @Html.ValidationMessageFor(model => model.RoleName)
        </div>

        <p>
            <input type="submit" value="Create"  id="btnSubmit" />
        </p>
    </fieldset>
}









@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () {
            
            $("#loading").hide();

            $("#progress").hide();

            $.ajaxSetup({ cache: false });

        });

        $("#btnSubmit").on("click", function (e) {

            $("#progress").removeClass('displaynone');
            $("#progress").addClass('displayblock');
            $("#progress").show();

            $("#create-role-form").submit();
        });


        </script>
 
}









