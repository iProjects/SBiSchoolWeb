@model SBiSchoolWeb.Entities.Teacher

@{
    ViewBag.Title = "Edit Teacher";
    var name = Model.Name.ToUpper();
}

<h2 class="page-title">Edit Teacher - @name</h2>

@using (Html.BeginForm("EditTeacher", "Teachers", FormMethod.Post, new { enctype = "multipart/form-data", id = "edit-teacher-form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Edit Teacher</legend>

        @Html.HiddenFor(model => model.Id);
                
        <article class="col1">
            <div class="pad">

                <ol>

                    <li>
                        @Html.ValidationMessageFor(model => model.Name)
                    </li>
                    <li>
                        @Html.ValidationMessageFor(model => model.IDNo)
                    </li>
                    <li>
                        @Html.ValidationMessageFor(model => model.TSCNo)
                    </li>
                    <li>
                        @Html.ValidationMessageFor(model => model.Position)
                    </li>
                    <li>
                        @Html.ValidationMessageFor(model => model.Email)
                    </li>
                </ol>



                <div class="editor-label">
                    @Html.LabelFor(model => model.Name)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Name)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.IDNo)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.IDNo)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.TSCNo)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.TSCNo)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Position)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Position)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Email)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Email)
                </div>


            </div>
        </article>

        <article class="col2">
            <div class="pad">

                <ol>
                    <li>
                        @Html.ValidationMessageFor(model => model.Status)
                    </li>
                    <li>
                        @Html.ValidationMessageFor(model => model.DateJoined)
                    </li>
                    <li>
                        @Html.ValidationMessageFor(model => model.DateLeft)
                    </li>
                    <li>
                        @Html.ValidationMessageFor(model => model.IsLeft)
                    </li>
                    <li>
                        @Html.ValidationMessageFor(model => model.HighestQualification)
                    </li>
                </ol>


                <div class="editor-label">
                    @Html.LabelFor(model => model.Status)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Status)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.DateJoined)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.DateJoined)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.DateLeft)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.DateLeft)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.IsLeft)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.IsLeft)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.HighestQualification)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.HighestQualification)
                </div>



            </div>
        </article>

        <p>
            <input type="submit" value="Save" id="btnSubmit" style="float: left; clear: both" />
        </p>

    </fieldset>
}






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () {

            $("#progress").hide();

            $.ajaxSetup({ cache: false });

        });
    </script>

}

