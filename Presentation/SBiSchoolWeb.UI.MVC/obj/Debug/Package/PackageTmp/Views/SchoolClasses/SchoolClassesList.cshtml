@model IEnumerable<SBiSchoolWeb.Entities.SchoolClass>

@{
    ViewBag.Title = "SchoolClasses";
    int SchoolClasses = Model.Count();
}

<h2 class="page-title">SchoolClasses [ @SchoolClasses ]  </h2>


<div>
    @using (Html.BeginForm("CreateSchoolClass", "SchoolClasses", FormMethod.Get, new { enctype = "multipart/form-data", id = "data-entry-create-schoolclass-form" }))
    { 
        <p>
            <a id="btnSubmitCreateSchoolClassForm" style="cursor: pointer;" title="Create SchoolClass">Create SchoolClass</a>
        </p> 
         
    }
</div>


<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShortCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfSubjects)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShortCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfSubjects)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id, description = item.ClassName })
            </td>
        </tr>
    }

</table>












@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () {

            $("#progress").hide();

            $.ajaxSetup({ cache: false });

        });

        $("#btnSubmitCreateSchoolClassForm").on("click", function (e) {

            e.preventDefault();

            $("#progress").removeClass('displaynone');
            $("#progress").addClass('displayblock');
            $("#progress").show();

            $("#data-entry-create-schoolclass-form").submit();

        });

    </script>

}










