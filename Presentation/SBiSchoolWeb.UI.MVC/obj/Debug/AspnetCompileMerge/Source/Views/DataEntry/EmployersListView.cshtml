@model IEnumerable<SBiSchoolWeb.Entities.Employer>

@{
    ViewBag.Title = "Employers";
    int Employerscount = Model.Count();
}

<h2 class="page-title">Employers [ @Employerscount ] </h2>

<p>
    @Html.ActionLink("Create New", "CreateEmployer")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditEmployer", new { id = item.Id }) |
            @Html.ActionLink("Details", "EmployerDetails", new { id = item.Id }) |
            @Html.ActionLink("Delete", "DeleteEmployer", new { id = item.Id, description = item.Name })
            </td>
        </tr>
    }

</table>










@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () { 

            $("#progress").hide();

            $.ajaxSetup({ cache: false });

        });
        </script>
 
}









