@model IEnumerable<SBiSchoolWeb.Entities.spUser>

@{
    ViewBag.Title = "Users";
    int Userscount = Model.Count();
}

<h2 class="page-title">Users [ @Userscount ]  </h2>

<p>
    @Html.ActionLink("Create New", "CreateUser")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditUser", new { id = item.UserId }) |
            @Html.ActionLink("Details", "UserDetails", new { id = item.UserId }) | 
            @Html.ActionLink("Delete", "DeleteUser", new { id = item.UserId, description = item.EmployeeName })
            </td>
        </tr>
    }

</table>










@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () {

            $("#loading").hide();

            $("#progress").hide();

            $.ajaxSetup({ cache: false });

        });
        </script>
 
}









