@model SBiSchoolWeb.UI.MVC.Models.ErrorHandlerModel

@{
    var errormessage = Model.ExceptionMessage;
    ViewBag.Title = "Error";
}

<h1><b style="color: cornflowerblue; font-size: 50px; font: bold;"><span style="font: bold; font-weight: bolder; font-family: Verdana, Helvetica, Sans-Serif; text-decoration: underline;">Error </span></b></h1>

<div>
    <h3><b><span style="font: bold; font-size: 15px; color: red; font-weight: bolder; font-family: Verdana, Helvetica, Sans-Serif;">@errormessage  </span></b></h3>
</div>

<div>
    @{
        if (Model.ExceptionMessages != null)
        {
            int count = 1;
            foreach (var _errormessage in Model.ExceptionMessages)
            {
        <h3><b><span style="font: bold; font-size: 15px; color: red; font-weight: bolder; font-family: Verdana, Helvetica, Sans-Serif;">@count .  @_errormessage  </span></b></h3> <br />
                count++;
            }
        }
     
    }
</div>









@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () { 

            $("#progress").hide();

            $.ajaxSetup({ cache: false });

        });
        </script>
 
}









