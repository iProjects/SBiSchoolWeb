@model IEnumerable<SBiSchoolWeb.Entities.Programme>

@{
    ViewBag.Title = "Programmes";
}

<h2 class="page-title"> Programmes</h2>

<p>
    @Html.ActionLink("Create New", "CreateProgramme")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th> 
        <th>
            @Html.DisplayNameFor(model => model.IsDefault)
        </th> 
        <th>
            @Html.DisplayNameFor(model => model.Fees)
        </th> 
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.IsDefault)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.Fees)
        </td> 
        <td>
            @Html.ActionLink("Edit", "EditProgramme", new { id=item.Id }) |
            @Html.ActionLink("Details", "ProgrammeDetails", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteProgramme", new { id=item.Id })
        </td>
    </tr>
}

</table>












@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">

        $(document).ready(function () {

            $("#progress").hide();

            $.ajaxSetup({ cache: false });

        });
        </script>
 
}










